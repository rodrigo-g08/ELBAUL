<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Comunidad - El Baúl</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f2f5;
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }

    .publicar-box {
      background: white;
      border-radius: 10px;
      padding: 1.5rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .post {
      background: white;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 0 6px rgba(0,0,0,0.05);
    }

    .post-header {
      font-weight: bold;
      font-size: 1.1rem;
      color: #365e9b;
    }

    .post-date {
      font-size: 0.85rem;
      color: #888;
    }

    .post-content {
      margin-top: 0.8rem;
    }

    .post img {
      max-width: 100%;
      border-radius: 8px;
      margin-top: 0.5rem;
    }

    .btn-custom {
      background-color: #365e9b;
      color: white;
    }

    .btn-custom:hover {
      background-color: #274a7d;
    }

    .post-footer {
      margin-top: 1rem;
    }
  </style>
</head>
<body>

  <!-- NAV -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">ElBaúl</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/productos">Productos</a></li>
          <li class="nav-item"><a class="nav-link active" href="/foro">Comunidad</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Cerrar Sesión</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- CONTENIDO -->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!-- Formulario para nueva publicación -->
        <div class="publicar-box mb-4">
          <h5 class="mb-3">Crear una publicación</h5>
          <form action="/foro/crear" method="POST">
            <div class="mb-3">
              <input type="text" name="usuario" class="form-control" placeholder="Tu nombre" required>
            </div>
            <div class="mb-3">
              <textarea name="contenido" rows="3" class="form-control" placeholder="¿Qué estás pensando?" required></textarea>
            </div>
            <div class="mb-3">
              <input type="text" name="imagen_url" class="form-control" placeholder="URL de imagen (opcional)">
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-custom">Publicar</button>
            </div>
          </form>
        </div>

        <!-- Feed de publicaciones -->
        <% publicaciones.forEach(p => { %>
          <div class="post">
            <div class="post-header"><%= p.usuario %></div>
            <div class="post-date"><%= new Date(p.fecha).toLocaleString("es-PE") %></div>
            <div class="post-content"><%= p.contenido %></div>
            <% if (p.imagen_url) { %>
              <img src="<%= p.imagen_url %>" alt="imagen">
            <% } %>
            <div class="post-footer">
              <a href="/foro/eliminar/<%= p._id %>" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </div>
          </div>
        <% }) %>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
