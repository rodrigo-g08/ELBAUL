<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>El Baúl - Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">

  <h1 class="mb-4 text-center">Registrar Producto</h1>

  <form action="/productos/crear" method="POST" class="row g-3 mb-5">
    <div class="col-md-3">
      <input type="text" name="nombre" class="form-control" placeholder="Nombre" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="descripcion" class="form-control" placeholder="Descripción">
    </div>
    <div class="col-md-2">
      <input type="number" name="precio" class="form-control" placeholder="Precio">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Registrar</button>
    </div>
  </form>

  <h2 class="mb-3">Lista de Productos</h2>

  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(p => { %>
        <tr>
          <td><%= p.nombre %></td>
          <td>S/ <%= p.precio %></td>
          <td>
            <div class="d-flex gap-2">
              <form action="/productos/editar/<%= p._id %>" method="POST" class="d-flex gap-2">
                <input type="text" name="nombre" value="<%= p.nombre %>" class="form-control form-control-sm" style="width: auto;" />
                <button type="submit" class="btn btn-primary btn-sm">Editar</button>
              </form>
              <a href="/productos/eliminar/<%= p._id %>" class="btn btn-danger btn-sm">Eliminar</a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
