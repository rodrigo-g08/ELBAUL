<% if (typeof success_messages !== 'undefined' && success_messages.length > 0) { %>
    <div class="container mt-3">
        <% success_messages.forEach(function(message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% }); %>
    </div>
<% } %>

<% if (typeof error_messages !== 'undefined' && error_messages.length > 0) { %>
    <div class="container mt-3">
        <% error_messages.forEach(function(message) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i><%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% }); %>
    </div>
<% } %>